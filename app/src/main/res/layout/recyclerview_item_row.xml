<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/placeCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        card_view:cardBackgroundColor="@color/backgroundColor"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/domainTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/source_code_pro"
                android:textColor="@color/domainTitleColor"
                android:textSize="@dimen/cardFontSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/domainTextView"
                android:fontFamily="@font/source_code_pro"
                android:textColor="@color/nameTitleColor"
                android:textSize="@dimen/cardFontSize" />

            <TextView
                android:id="@+id/breachDateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameTextView"
                android:fontFamily="@font/source_code_pro"
                android:textColor="@color/breachDateTitleColor"
                android:textSize="@dimen/cardFontSize"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>